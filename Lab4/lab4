import math
from datetime import datetime
from mymodule import asd
from mymodule import fgh
from mymodule import jkl
try:
    number = float(input("ведите положительное число: "))
    if number >= 0:
        result = math.sqrt(number)
        print(f" Квадратный корень числа {number} равен {result}")
    else:
        raise ValueError("Число должно быть положительным.")
except ValueError as e:
    print(e)


now = datetime.now()
f_now = now.strftime("%Y-%m-%d %H:%M:%S")
print(f"Дата и время на сегодняшний день: {f_now}")


a = int(input("Ведите первое число: "))
b = int(input("Ведите второе число: "))
n = jkl(a, b)
print(f"Результат деления большего на меньшее равен:{n}")

sl = str(input("Введите текст: "))
rsl = asd(sl)
print(f"Обратная строка для вашего слова: {rsl}")

k = int(input("Ведите первое число: "))
l = int(input("Ведите второе число: "))
m = fgh(k, l)
print(f"Результат умножения равен: {m}")

